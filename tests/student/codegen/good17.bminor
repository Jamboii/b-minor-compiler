// if statements

boolfunc: function boolean(a:boolean, b:boolean) =
{
    if (a && b)
    {
        print "this is true!\n";
        return true;
    }
    else if (a || b)
    {
        print "this is false!\n";
        return false;
    }
    else
    {
        print "both are false!\n";
        return false;
    }
    return true;
}

